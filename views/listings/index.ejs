         <div class="filter">
            <div>
                <i class="fa-solid fa-tents"></i>
            </div>
             <p>Camp</p>
         </div>
         <div class="filter">
            <div>
                <i class="fa-solid fa-champagne-glasses"></i>
            </div> 
             <p>Hangouts</p>
         </div>
