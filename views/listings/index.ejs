            <div>
                <i class="fa-solid fa-tractor"></i>
            </div> 
             <p>Farms</p>
         </div>
         <div class="filter">
            <div>
                <i class="fa-solid fa-hat-cowboy"></i>
            </div> 
             <p>Country Side</p>
         </div>
